<?xml version="1.0" encoding="utf-8"?>

<!--
    This XML file designs the layout for the 'Ford.class'
    There is a scrollview, within which there is a
    'ViewPager' to display images, a 'TextView'
    which displays a string to the user and finally several 'Buttons'
-->

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/gradient_background">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        tools:context="com.example.user.vel.Ford"
        android:background="@drawable/gradient_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp"
            android:padding="20dp"
            android:text="@string/Ford_Head"
            android:textColor="@color/black"
            android:textSize="20sp" >
        </TextView>

        <TextView
            android:id="@+id/slider_text"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:paddingBottom="10dp"
            android:text="@string/slider_text"
            android:layout_width="300dp"
            android:layout_height="wrap_content">
        </TextView>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="wrap_content"
            android:layout_height="200dp">
        </android.support.v4.view.ViewPager>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/ford_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:text="@string/under_wheel"
            android:textSize="20sp"
            android:padding="10dp">
        </TextView>

        <Button
            android:textColor="@color/black"
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/ElmSet">
        </Button>

        <Button
            android:textColor="@color/black"
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/temp_specs">
        </Button>

        <Button
            android:textColor="@color/black"
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/throttle_load">
        </Button>

        <Button
            android:textColor="@color/black"
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/RPM">
        </Button>

        <Button
            android:textColor="@color/black"
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/mass_air">
        </Button>

    </LinearLayout>
</ScrollView>
